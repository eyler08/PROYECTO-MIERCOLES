<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jesus.basefinal.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="REGISTRO PERSONA"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/buscar"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="BUSCAR POR DNI"
                android:inputType="number" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="73dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                android:onClick="buscar"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/buscar" />

        </GridLayout>

        <EditText
            android:id="@+id/dni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="DNI"
            android:inputType="number"
            android:maxLength="8"
            android:phoneNumber="false" />

        <EditText
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="NOMBRE"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/apellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="APELLIDO"
            android:inputType="textPersonName" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="73dp"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:background="@android:color/transparent"
                android:drawablePadding="15dp"
                android:elevation="0dp"
                android:gravity="left|center_vertical"

                android:onClick="insertar"
                android:scaleType="fitCenter"
                android:text="HOLA"


                android:visibility="visible"
                app:srcCompat="@drawable/save" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="73dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:contentDescription="ACTUALIZAR"
                android:onClick="actualizar"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/actualizar" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="73dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:contentDescription="ELIMINAR"
                android:onClick="eliminar"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/eliminar" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:contentDescription="listar"
                android:onClick="listar"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/book" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:onClick="cancelar"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/cancelar" />

        </GridLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
